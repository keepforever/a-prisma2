datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@localhost:5432/prisma_two_db?schema=prisma_two_db_schema"
}

generator photonjs {
    provider = "photonjs"
}

generator nexus_prisma {
  provider = "nexus-prisma"
  output   = "../node_modules/@generated/nexus-prisma"
}

model User {
    id           String  @id @default(cuid())
    name         String?
    email        String  @unique
    arenaHandle  String?
    password     String
    isAdmin      Boolean @default(false)
    decks        Deck[]
}

model Deck {
    id         String  @id @default(cuid())
    title      String?
    list       String?
    comments   Comment[]
    author     User?

}

model Comment {
    id        String  @id @default(cuid())
    content   String?
    author    User?
    deck      Deck?
}
